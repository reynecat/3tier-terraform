
# PlanB/aws/terraform.tfvars

# =================================================
# 기본 설정
# =================================================

environment = "blue"
aws_region  = "ap-northeast-2"

# =================================================
# Azure 연동 (Blob Storage 백업용)
# =================================================

azure_storage_account_name  = "bloberry01" 
azure_storage_account_key   = "YOUR_AZURE_STORAGE_KEY"
azure_backup_container_name = "mysql-backups"
azure_tenant_id             = "df9bad6f-9a31-4eec-b9fa-f6955eae81bd"
azure_subscription_id       = "fdc2f63f-a7bc-4ac7-901a-c730f7d317e9"

# =================================================
# 백업 인스턴스 설정
# =================================================

enable_backup_instance = true
backup_instance_ssh_public_key = "ssh-rsa "

# =================================================
# 데이터베이스 설정
# =================================================

db_name     = "petclinic"
db_username = "admin"
db_password = "MyNewPassword123!"  # 실제 사용 시 환경변수 권장

# =================================================
# VPC 설정
# =================================================

aws_vpc_cidr = "10.0.0.0/16"

aws_availability_zones = [
  "ap-northeast-2a",
  "ap-northeast-2c"
]

public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
web_subnet_cidrs    = ["10.0.11.0/24", "10.0.12.0/24"]
was_subnet_cidrs    = ["10.0.21.0/24", "10.0.22.0/24"]
rds_subnet_cidrs    = ["10.0.31.0/24", "10.0.32.0/24"]

# =================================================
# EKS 노드 설정
# =================================================

eks_node_instance_type = "t3.small"
eks_web_desired_size   = 2
eks_web_min_size       = 1
eks_web_max_size       = 4
eks_was_desired_size   = 2
eks_was_min_size       = 1
eks_was_max_size       = 4

# =================================================
# RDS 설정
# =================================================

rds_instance_class        = "db.t3.medium"
rds_allocated_storage     = 100
rds_max_allocated_storage = 200
rds_multi_az              = true
rds_skip_final_snapshot   = true
rds_deletion_protection   = false

# =================================================
# Route53 설정
# =================================================

enable_custom_domain = false
domain_name          = ""
create_hosted_zone   = false